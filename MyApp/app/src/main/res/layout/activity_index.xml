<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_bar">

        <LinearLayout
            android:id="@+id/one_layout"
            style="@style/navigation_linear" >
            <ImageView
                android:id="@+id/one_image"
                style="@style/navigation_image"
                android:src="@drawable/one_selected" />
            <TextView
                android:id="@+id/one_text"
                style="@style/navigation_text"
                android:text="书籍分类"
                android:textColor="@color/colorSelected" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_layout"
            style="@style/navigation_linear" >
            <ImageView
                android:id="@+id/two_image"
                style="@style/navigation_image"
                android:src="@drawable/two_unselected" />
            <TextView
                android:id="@+id/two_text"
                style="@style/navigation_text"
                android:text="书籍管理"
                android:textColor="@color/colorUnSelected"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_layout"
            style="@style/navigation_linear" >
            <ImageView
                android:id="@+id/three_image"
                style="@style/navigation_image"
                android:src="@drawable/three_unselected" />
            <TextView
                android:id="@+id/three_text"
                style="@style/navigation_text"
                android:text="我的笔记"
                android:textColor="@color/colorUnSelected"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
