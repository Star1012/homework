<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addnote_beijing"
    tools:context="com.example.administrator.myapp.NoteDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            style="@style/showNoteDetail">
            <TextView
                style="@style/showNoteDetail_tv"
                android:text="书名：" />
            <TextView
                android:id="@+id/n_shuming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            style="@style/showNoteDetail">
            <TextView
                style="@style/showNoteDetail_tv"
                android:text="作者：" />
            <TextView
                android:id="@+id/n_zuozhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            style="@style/showNoteDetail">
            <TextView
                style="@style/showNoteDetail_tv"
                android:text="日期：" />
            <TextView
                android:id="@+id/n_riqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            style="@style/showNoteDetail">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="笔记内容："
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/n_content"
            style="@style/Lina_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:gravity="left"
            android:textSize="20dp"/>
    </LinearLayout>
</FrameLayout>
