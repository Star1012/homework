            android:id="@+id/tv33"
            style="@style/tv00Style"/>
        <ImageView
            android:id="@+id/del3"
            style="@style/delStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/attribute"
        android:paddingTop="300dp">
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="60dp"
            android:layout_height="60dp" />
