            android:id="@+id/tv55"
            style="@style/tv00Style"/>
        <ImageView
            android:id="@+id/del5"
            style="@style/delStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/attribute"
        android:paddingTop="420dp">
        <ImageView
            android:id="@+id/iv6"
            android:layout_width="60dp"
            android:layout_height="60dp" />
